{
  "manifest_version": 3,
  "name": "OmniStitch MVP",
  "version": "0.1.0",
  "description": "One-click: jump to ChatGPT/Kimi/DeepSeek/Gemini and auto-send prompt with current page URL.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Send to AI"
  },
  "commands": {
    "send-to-chatgpt": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Send active page URL to configured AI target"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://www.kimi.com/*",
        "https://kimi.com/*",
        "https://chat.deepseek.com/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
